<%- include('_head.ejs', {title: 'Create Client'}) %>
<form class="w3-container light-border" method='post'>
    <div style="width:260px">
        <p>First Name: <input style="float:right" type="text" name="firstName"></p>
        <p>Last Name: <input style="float:right" type="text" name="lastName"></p>
        <p>Email: <input style="float:right" type="text" name="email"></p>
    </div>
    <p>Billing method: <br>
        <input type="radio" name="BillingMethod" value="debit"> Debit
        <input type="radio" name="BillingMethod" value="cash"> Cash
        <input type="radio" name="BillingMethod" value="credit"> Credit
    </p>
    <div class="w3-container" style="width:470px">
        <input type="button" value="Cancel">
        <input style="float:right" type="submit" value="Done">
    </div>
</form>
